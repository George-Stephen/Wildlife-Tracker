{{#partial content}}
<div class="jumbotron">
    <form action="/animals" method="post">
        <div class="form-group">
            <label for="Name">Animal name
            <input type="text" name="Name" id="Name">
            </label>
        </div>
        <div class="form-group">
            <label for="health">Health
                <select name="health">
                    <option>Ill</option>
                    <option>Okay</option>
                    <option>Healthy</option>
                </select>
            </label>
        </div>
        <div class="form-group">
            <label for="age">Age
                <select name="age">
                    <option>Newborn</option>
                    <option>Young</option>
                    <option>Adult</option>
                </select>
            </label>
        </div>
        <div class="form-group">
            <label for="rangerid">Ranger that found it
                <input type="number" name="rangerid">
            </label>
        </div>
        <button type="submit" class="btn btn-success">Add Animal</button>
    </form>
</div>
{{/partial}}
{{>layout.hbs}}